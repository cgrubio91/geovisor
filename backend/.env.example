# Database Configuration
DATABASE_URL=postgresql://geovisor_user:geovisor_password_2024@localhost:5432/geovisor

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=GeoVisor
APP_VERSION=1.0.0
DEBUG=True
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes
UPLOAD_DIR=../data/uploads
PROCESSED_DIR=../data/processed
TEMP_DIR=../data/temp

# GDAL Configuration
GDAL_DATA=/usr/share/gdal
PROJ_LIB=/usr/share/proj

# Email (Optional - for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@geovisor.com
EMAILS_FROM_NAME=GeoVisor

# Cesium Ion (Optional - for 3D terrain)
CESIUM_ION_TOKEN=your-cesium-ion-token

# Admin User (First Run)
FIRST_SUPERUSER_EMAIL=admin@geovisor.com
FIRST_SUPERUSER_PASSWORD=admin123
